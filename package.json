{
  "name": "note-to-go",
  "displayName": "NoteToGo - Save Notes, Password Protected!",
  "version": "3.0.0",
  "description": "Simple and quick way to add small yet effective side notes!",
  "author": "Himanshu",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@expo/spawn-async": "^1.7.2",
    "@plasmohq/storage": "^1.15.0",
    "@supabase/supabase-js": "^2.57.2",
    "@tanstack/query-async-storage-persister": "^5.90.2",
    "@tanstack/query-sync-storage-persister": "^5.90.2",
    "@tanstack/react-query": "^5.90.2",
    "@tiptap/extension-font-size": "^3.0.0-next.3",
    "@tiptap/extension-image": "^3.10.4",
    "@tiptap/extension-strike": "^3.3.0",
    "@tiptap/extension-text-align": "^3.11.0",
    "@tiptap/extension-text-style": "^3.11.0",
    "@tiptap/extensions": "^3.7.2",
    "@tiptap/pm": "^3.3.0",
    "@tiptap/react": "^3.3.0",
    "@tiptap/starter-kit": "^3.3.0",
    "@types/css-modules": "^1.0.5",
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.468.0",
    "lucide-solid": "^0.555.0",
    "plasmo": "^0.90.5",
    "pnpm": "^10.20.0",
    "quill": "^2.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.5.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.1.0",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "commands": {
      "new_note": {
        "suggested_key": {
          "default": "Ctrl+Shift+N",
          "mac": "MacCtrl+Command+N"
        },
        "description": "Create a new NoteToGo note"
      }
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "key": "$CRX_KEY",
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus",
      "unlimitedStorage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "options.html"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
