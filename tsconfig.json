{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    ".plasmo/**/*",
    "**/*",
    "./types.d.ts"
  ],
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "types": [
      "./types/index.d.ts",
      "@types/react-dom",
      "@types/react",
      "@types/css-modules",
      "@types/chrome"
    ]
  }
}

